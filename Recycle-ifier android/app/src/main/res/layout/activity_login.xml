<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradback_login"
    android:orientation="vertical"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Welcomeback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:fontFamily="@font/armata"
                android:lineSpacingExtra="8sp"
                android:text="Welcome back !"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#7A12D8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:fontFamily="@font/armata"
                android:text="Sign in  to  your  account"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/this_app_theme"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textColor="#038A03" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmail"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="30sp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#038A03" />

            <Switch
                android:id="@+id/switch_shared_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="8sp"
                android:text="Shared Preferences  "
                android:textAllCaps="true"
                android:textColor="#398B0C"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordered_button"
                android:text="SIGN IN"
                android:textColor="#0f9b0f"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="@font/armata"
                android:text="Forgot password?"
                android:textAllCaps="false"
                android:textColor="#777777"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_register"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/armata"
                    android:gravity="center_vertical"
                    android:text="Don't have an account?"
                    android:textColor="#777777"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnRegisterHere"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/btnLogin"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/bg_btn_filled"
                    android:fontFamily="@font/armata"
                    android:text="SIGN UP"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="40sp"
                android:fontFamily="@font/armata"
                android:gravity="center_horizontal|center_vertical"
                android:text="Created  by  Zainuddin Saiyed"
                android:textColor="#302b63"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50sp"
                android:fontFamily="@font/armata"
                android:gravity="center_horizontal|center_vertical"
                android:text="Contact: "
                android:textColor="#302b63"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>