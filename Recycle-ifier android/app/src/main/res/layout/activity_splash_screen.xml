<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradback_login"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="190sp"
        android:fontFamily="@font/bilbo_swash_caps"
        android:text="Recycle-ifier"
        android:textColor="#0439A3"
        android:textSize="56sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25sp"
        android:fontFamily="@font/advent_pro_thin"
        android:text="An app that classifies whether an image contains organic or a recycleable item!"
        android:textAlignment="center"
        android:textColor="#012C25"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="250sp"
        android:fontFamily="@font/armata"
        android:gravity="center_horizontal|center_vertical"
        android:text="Created  by  Zainuddin Saiyed"
        android:textColor="#302b63"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/armata"
        android:gravity="center_horizontal|center_vertical"
        android:text="Contact: "
        android:textColor="#302b63"
        android:textStyle="bold"
        android:visibility="invisible" />

</LinearLayout>